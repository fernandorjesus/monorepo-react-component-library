{
  "compilerOptions": {
    "rootDir": "components",
    "declaration": true,
    "declarationDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["components/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "storybook-static",
    "components/**/*.stories.tsx",
    "components/**/*.test.tsx"
  ]
}
